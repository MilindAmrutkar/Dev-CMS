<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devwellupsolution.dev_cms.Activity.AddCustomerActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/Headers"
            android:text="Add New Customer"/>


        <EditText
            android:id="@+id/et_MobileNumber_AddCustomerActivity"
            style="@style/editText"
            android:inputType="number"
            android:hint="Mobile"/>

        <TextView
            style="@style/TextView"
            android:text="OR"/>

        <EditText
            android:id="@+id/et_EmailAddress_AddCustomerActivity"
            style="@style/editText"
            android:hint="Email"/>

        <Button
            style="@style/Button"
            android:onClick="openEnterCustomerDetails"
            android:text="Continue"/>

    </LinearLayout>



</ScrollView>
